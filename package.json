{
	"name": "@okralang/okra",
	"version": "0.0.1",
	"description": "A simple, well-typed configuration language",
	"main": "index.js",
	"author": "Cameron Messinides <me@cmessinides.com>",
	"license": "MIT",
	"private": false,
	"bin": {
		"okra": "./bin/okra.js"
	},
	"files": [
		"bin",
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc -w",
		"test": "uvu -r ts-node/register -i __helpers test",
		"test:unit": "yarn test -i e2e",
		"test:watch": "watchlist src test -- yarn -s test:unit",
		"coverage": "nyc yarn test"
	},
	"dependencies": {
		"chalk": "^4.1.0",
		"yargs": "^16.1.0"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@types/node": "^14.11.2",
		"@types/yargs": "^15.0.9",
		"nyc": "^15.1.0",
		"sentence-case": "^3.0.3",
		"source-map-support": "^0.5.19",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.3",
		"uvu": "^0.3.4",
		"watchlist": "^0.2.3"
	},
	"nyc": {
		"extends": "@istanbuljs/nyc-config-typescript",
		"all": true,
		"check-coverage": true,
		"include": [
			"src/**/*.ts"
		],
		"reporter": [
			"text",
			"html"
		]
	}
}
