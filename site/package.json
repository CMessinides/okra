{
	"name": "@okra-lang/site",
	"version": "0.1.0",
	"description": "Website for the Okra language",
	"repository": {
		"type": "git",
		"url": "https://github.com/CMessinides/okra.git",
		"directory": "site"
	},
	"author": "Cameron Messinides <me@cmessinides.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "run-p build:*",
